@model ContactUpdateVM
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="mb-2">
    <h5 class="card-title">Update Contact</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Contact" asp-action="GetContactList">Contact Us </a></li>

            <li class="breadcrumb-item"><a href="#">Update</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Contact" asp-action="UpdateContact" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-12 ">
                <div class="form-floating">
                    <input asp-for="Location" type="text" class="form-control" placeholder="Location">
                    <label asp-for="Location">Location</label>
                    <span asp-validation-for="Location" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Call" type="text" class="form-control" placeholder="Call"></textarea>
                    <label asp-for="Call">Call</label>
                    <span asp-validation-for="Call" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Map" type="text" class="form-control" placeholder="Map">
                    <label asp-for="Map">Map</label>
                    <span asp-validation-for="Map" class="text-danger"></span>

                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>


