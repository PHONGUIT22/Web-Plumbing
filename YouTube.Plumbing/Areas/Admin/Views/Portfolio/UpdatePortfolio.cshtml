@model PortfolioUpdateVM
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="mb-2">
    <h5 class="card-title">Update Portfolio</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolio  </a></li>

            <li class="breadcrumb-item"><a href="#">Update</a></li>
        </ol>
    </nav>
</div>
<!-- Card with an image on top -->
<div class="card">
    <img src="~/Admin/assets/img/card.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
    </div>
</div><!-- End Card with an image on top -->

<div class="card">
    <div class="card-body">
        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="FileName" value="test" />
            <input type="hidden" asp-for="FileType" value="test" />
            <input type="hidden" asp-for="Id" value="test" />
            <input type="hidden" asp-for="RowVersion" value="test" />

            <div class="col-md-12 ">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Name">
                    <label asp-for="Title">Name</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Category.Name" type="text" class="form-control" placeholder="Category.Name"></textarea>
                    <label asp-for="Category.Name">Category</label>
                </div>
            </div>
            <div class="row-mb-12">
                <label asp-for="Photo" class="col-md-4 col-lg-3 col-form-label"></label>
                <div class="col-md-8 col-lg-9">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>

