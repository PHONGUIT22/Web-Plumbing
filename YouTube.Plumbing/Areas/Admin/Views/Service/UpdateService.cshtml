@model ServiceUpdateVM
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="mb-2">
    <h5 class="card-title">Update Service </h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Service" asp-action="GetServiceList">Service </a></li>

            <li class="breadcrumb-item"><a href="#">Update</a></li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Service" asp-action="UpdateService" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-12 ">
                <div class="form-floating">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Icon" type="text" class="form-control" placeholder="Icon"></textarea>
                    <label asp-for="Icon">Icon</label>
                    <span asp-validation-for="Icon" class="text-danger"></span>

                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>
