
@model List<PortfolioListForUI>


<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title">
            <span>Portfolio</span>
            <h2>Portfolio</h2>
        </div>

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach(var item in Model)
                    {
                        <li data-filter=".filter-@item.Category.Name">@item.Category.Name</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row portfolio-container">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-@item.Category.Name">
                    <img src="~/images/@item.FileName" class="img-fluid" alt="Portfolio of Plumbing">
                    <div class="portfolio-info">
                        <h4>@item.Title</h4>
                        <p>@item.Title</p>
                    </div>
                </div>

            }

        </div>

    </div>
</section>